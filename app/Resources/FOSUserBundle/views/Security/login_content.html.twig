{% trans_default_domain 'FOSUserBundle' %}

{% if error %}
    <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
{% endif %}

<form class="form-horizontal m-t-20" action="{{ path("fos_user_security_check") }}" method="POST">
    {% if csrf_token %}
        <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
    {% endif %}
    <div class="form-group ">
        <div class="col-xs-12">
            <h3>Sign In</h3>
        </div>
    </div>
    <div class="form-group ">
        <div class="col-xs-12">
            <input name="_username" class="form-control" type="text" required placeholder="{{ 'security.login.username'|trans }}">
        </div>
    </div>
    <div class="form-group">
        <div class="col-xs-12">
            <input name="_password" class="form-control" type="password" required placeholder="{{ 'security.login.password'|trans }}">
        </div>
    </div>
    <div class="form-group ">
        <div class="col-md-5 col-xs-12">
            <div class="checkbox checkbox-primary">
                <input name="_remember_me" id="checkbox-signup" type="checkbox">
                <label for="checkbox-signup">{{ 'security.login.remember_me'|trans }}</label>
            </div>
        </div>
        {#<div class="col-md-7 col-xs-12 m-t-5 text-right"><a href="recoverpw.html" class="text-dark"><i class="fa fa-lock m-r-5"></i> Forgot your password?</a></div>#}
    </div>
    <div class="form-group text-center m-t-40">
        <div class="col-xs-12">
            <input type="submit" id="_submit" name="_submit"
                   value="{{ 'security.login.submit'|trans }}"
                   class="btn btn-primary btn-lg btn-block text-uppercase waves-effect waves-light"
            >
        </div>
    </div>
</form>
